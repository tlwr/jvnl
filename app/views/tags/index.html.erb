<div>
  <h1 class="text-3xl font-bold mb-8">Tags</h1>
  <% if @tags.any? %>
    <ul>
      <% @tags.each do |tag| %>
        <li class="mb-2"><%= link_to "#{tag.name} (#{tag.pictures_count.to_i})", tag_path(tag), class: "text-blue-600 hover:text-blue-800" %> <% if current_user %><%= button_to 'Delete', tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, form_class: "inline-block ml-2", class: "bg-red-500 text-white px-2 py-1 rounded text-sm hover:bg-red-600" %><% end %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">Er zijn geen tags</p>
  <% end %>
</div>
