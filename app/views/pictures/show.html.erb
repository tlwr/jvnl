<div class="max-w-4xl mx-auto">
  <% if @picture.image.attached? %>
    <div class="mb-4">
      <%= image_tag @picture.image.content_type == "image/svg+xml" ? @picture.image : @picture.image.variant(resize_to_limit: [1200, 800]), class: "w-full rounded-lg shadow-md" %>
    </div>
  <% end %>

  <% if current_user %>
    <div class="mb-4">
      <%= link_to "Bewerken", edit_picture_path(@picture), class: "text-blue-600 hover:text-blue-800" %>
    </div>
  <% end %>

  <h1 class="text-3xl font-bold mb-4"><%= @picture.title %></h1>

  <p class="text-gray-700 mb-8"><%= @picture.description %></p>

  <div>
    <%= link_to "Terug naar alle beelden", pictures_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>