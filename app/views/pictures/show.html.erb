<% if @picture.image.attached? %>
  <div class="mb-4">
    <%= image_tag @picture.image.content_type == "image/svg+xml" ? @picture.image : @picture.image.variant(resize_to_limit: [1200, 800]), class: "w-full rounded-lg shadow-md" %>
  </div>
<% end %>

<h1 class="text-3xl font-bold mb-4"><%= @picture.title %></h1>

<p class="text-gray-700 mb-8"><%= @picture.description %></p>

<% if @picture.tags.any? %>
  <p class="text-gray-600 mb-4">
    <% @picture.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag.name), class: "text-blue-600 hover:text-blue-800" %>
      &#8193;
    <% end %>
    </p>
<% end %>

<% if current_user %>
  <div class="mt-4">
    <%= link_to "Bewerken", edit_picture_path(@picture), class: "text-blue-600 hover:text-blue-800 underline decoration-dotted" %>
  </div>
<% end %>
