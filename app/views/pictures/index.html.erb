<h1 class="text-3xl font-bold mb-8">Alle beelden</h1>

<% if @pictures.empty? %>
  <p class="text-gray-600">Er zijn geen beelden</p>
<% else %>
  <% @pictures.each do |picture| %>
    <% if picture.image.attached? %>
      <div class="mb-8">
        <%= link_to picture_path(picture) do %>
          <%= image_tag picture.image.content_type == "image/svg+xml" ? picture.image : picture.image.variant(resize_to_limit: [400, 300]), class: "w-full object-cover" %>
        <% end %>
        <h3 class="text-lg font-semibold"><%= picture.title %></h3>
      </div>
    <% end %>
  <% end %>
<% end %>
