<div class="w-full max-w-md">
  <h2 class="text-2xl font-bold mb-4">Nieuwe afbeelding uploaden</h2>

  <% if @picture.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h3 class="font-bold">Er zijn fouten opgetreden:</h3>
      <ul class="list-disc list-inside">
        <% @picture.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @picture, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :title, "Titel", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

     <div>
       <%= f.label :description, "Beschrijving", class: "block text-sm font-medium text-gray-700 mb-1" %>
       <%= f.text_area :description, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
     </div>

      <div>
        <%= f.check_box :visible, class: "mr-2" %>
        <%= f.label :visible, "Zichtbaar", class: "text-sm font-medium text-gray-700" %>
      </div>

      <div>
        <%= f.label :tag_ids, "Tags", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="space-y-2">
          <%= f.collection_check_boxes :tag_ids, Tag.order(:id), :id, :name do |b| %>
            <div class="flex items-center">
              <%= b.check_box class: "mr-2" %>
              <%= b.label class: "text-sm font-medium text-gray-700" %>
            </div>
          <% end %>
        </div>
      </div>

      <div>
       <%= f.label :image, "Afbeelding", class: "block text-sm font-medium text-gray-700 mb-1" %>
       <%= f.file_field :image, accept: "image/*", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
     </div>

    <div>
      <%= f.submit "Uploaden", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>