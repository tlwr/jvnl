<div class="w-full max-w-md">
  <h2 class="text-2xl font-bold mb-4">Afbeelding bewerken</h2>

  <% if @picture.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h3 class="font-bold">Er zijn fouten opgetreden:</h3>
      <ul class="list-disc list-inside">
        <% @picture.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @picture.image.attached? %>
    <div class="mb-4">
      <%= image_tag @picture.image.content_type == "image/svg+xml" ? @picture.image : @picture.image.variant(resize_to_limit: [400, 300]), class: "rounded-lg shadow-md" %>
    </div>
  <% end %>

  <%= form_with model: @picture, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :title, "Titel", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

     <div>
       <%= f.label :description, "Beschrijving", class: "block text-sm font-medium text-gray-700 mb-1" %>
       <%= f.text_area :description, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
     </div>

     <div>
       <%= f.check_box :visible, class: "mr-2" %>
       <%= f.label :visible, "Zichtbaar", class: "text-sm font-medium text-gray-700" %>
     </div>

     <div>
       <%= f.submit "Bijwerken", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
     </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "Annuleren", picture_path(@picture), class: "text-gray-600 hover:text-gray-800" %>
  </div>

  <div class="mt-8 pt-4 border-t border-gray-200">
    <%= button_to "Verwijderen", picture_path(@picture), method: :delete, data: { confirm: "Weet je zeker dat je deze afbeelding wilt verwijderen?" }, class: "w-full bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </div>
</div>
